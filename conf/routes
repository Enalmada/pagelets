# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET        /                               controllers.HomeController.index
GET        /pagelet/:id                    controllers.HomeController.pagelet(id: String)
GET        /resource/:fingerprint          controllers.HomeController.resourceFor(fingerprint: String)

GET        /2                              controllers.HomeController2.index
GET        /2/part/:id                  controllers.HomeController2.part(id: String)
GET        /2/resource/:fingerprint        controllers.HomeController2.resourceFor(fingerprint: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
