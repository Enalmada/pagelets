<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%logger{15} - %message%n%xException{10}</pattern>
        </encoder>
    </appender>

    <root level="off">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
